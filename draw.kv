<MyWidget>:
	Label:
		text: 'Hello'

<GestureRecorder>:
	canvas:
		#Bakgrundsfärg
		Color:
			rgba:  .1,.1,.1,1
		Rectangle:
			pos: 0,0
			size: root.width,root.height
		Color:
			rgba:  .2,.2,.2,1
		Rectangle:
			pos:[root.width *0.2, root.height *0.2]
			#color: [1,0,1,1]
			size: root.width *.6,root.height*.6

	FloatLayout:
		StencilView:
			id: 'scv'
			align:'top'
			size:100,100
			color:[.1,.1,.1,1]
		Label:
			background_color:[1,0.5,1,1]
			text: str(root.width)
			pos:[root.width *0.2, root.height *0.2]
		Button:
			pos: 0,0
			size_hint: .1,.1
			text:'hejjjj'
			color: [1,0,1,1]
			background_color: [0,1,1,1]
			on_press: root.ClearRek(root)
		rek:
			pos: 100, 100
			size_hint: .1, .1
		


<rek@RelativeLayout>:
	size_hint: None, None
	size: 48, 48
	canvas:
		Rectangle:


<PosRecorder>:
	canvas:
		#Bakgrundsfärg
		Color:
			rgba:  .3,.3,.3,1
		Rectangle:
			pos: 0,0
			size: root.width,root.height

